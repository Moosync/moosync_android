<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="themeStyle" format="enum">
        <enum name="accent" value="0" />
        <enum name="primary" value="1" />
        <enum name="secondary" value="2" />
        <enum name="tertiary" value="3" />
        <enum name="textPrimary" value="4" />
        <enum name="textSecondary" value="5" />
        <enum name="textInverse" value="6" />
        <enum name="divider" value="7" />
    </attr>

    <declare-styleable name="ThemedTextView">
        <attr name="themeStyle"/>
    </declare-styleable>

    <declare-styleable name="ThemedLinearLayout">
        <attr name="themeStyle"/>
    </declare-styleable>

    <declare-styleable name="ThemedFrameLayout">
        <attr name="themeStyle"/>
    </declare-styleable>

    <declare-styleable name="ThemedNavigationView">
        <attr name="themeStyle"/>
    </declare-styleable>

    <declare-styleable name="ThemedToolbar">
        <attr name="themeStyle"/>
    </declare-styleable>

    <declare-styleable name="ThemedBottomNavigationView">
        <attr name="themeStyle" />
    </declare-styleable>
</resources>