<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <app.moosync.moosync.ui.views.ThemedLinearLayout
        android:id="@+id/song_list_header"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:paddingHorizontal="24dp">

        <app.moosync.moosync.ui.views.ThemedTextView
            android:id="@+id/song_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_gravity="start|center_vertical"
            android:text="@string/songs_header" />

        <app.moosync.moosync.ui.views.ThemedLinearLayout
            android:id="@+id/song_list_header_button_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

        </app.moosync.moosync.ui.views.ThemedLinearLayout>
    </app.moosync.moosync.ui.views.ThemedLinearLayout>

</layout>